<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <LinearLayout        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:layout_height="wrap_content"        android:layout_width="match_parent"        android:padding="20dp"        android:orientation="vertical"        android:gravity="center">        <TextView            android:id="@+id/tv_timer"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="00:00:00" />        <LinearLayout            android:layout_gravity="center"            android:orientation="horizontal"            android:layout_height="wrap_content"            android:layout_width="wrap_content">            <Button                android:id="@+id/btn_startTimer"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="Start"/>            <Button                android:id="@+id/btn_pauseTimer"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="Start"/>            <Button                android:id="@+id/btn_endTimer"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="Stop"/>        </LinearLayout>        <Button            android:id="@+id/btn_record"            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:text="Record"/>    </LinearLayout></android.support.constraint.ConstraintLayout>