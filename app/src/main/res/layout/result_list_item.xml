<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp">

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:id="@+id/tv_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Duration" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_created_at_value"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:id="@+id/tv_duration_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="00:00:00" />

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:id="@+id/img_delete"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/baseline_delete_black_48" />

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration"
                android:padding="10dp"
                android:id="@+id/tv_created_at"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Finished At" />

            <TextView
                app:layout_constraintLeft_toRightOf="@+id/tv_created_at"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration"
                android:padding="10dp"
                android:id="@+id/tv_created_at_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="6th Jan 2019" />

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_created_at"
                android:padding="10dp"
                android:id="@+id/tv_original"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Original" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_created_at_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_created_at_value"
                android:padding="10dp"
                android:id="@+id/tv_original_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Where" />

            <ImageView
                app:layout_constraintTop_toTopOf="@+id/tv_original_value"
                app:layout_constraintBottom_toBottomOf="@+id/tv_original_value"
                app:layout_constraintLeft_toRightOf="@+id/tv_original_value"
                android:id="@+id/img_original"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/baseline_edit_black_48" />

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_original"
                android:padding="10dp"
                android:id="@+id/tv_destination"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Destination" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_created_at_value"
                app:layout_constraintTop_toBottomOf="@+id/tv_original_value"
                android:padding="10dp"
                android:id="@+id/tv_destination_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Where" />

            <ImageView
                app:layout_constraintTop_toTopOf="@+id/tv_destination_value"
                app:layout_constraintBottom_toBottomOf="@+id/tv_destination_value"
                app:layout_constraintLeft_toRightOf="@+id/tv_destination_value"
                android:id="@+id/img_destination"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/baseline_edit_black_48" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>